            @Html.EditorFor(model => model.caloricDemand, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.caloricDemand, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Zapisz" class="btn btn-default" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



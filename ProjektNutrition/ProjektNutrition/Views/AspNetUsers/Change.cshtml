@model ProjektNutrition.Models.AspNetUsers
@{
    ViewBag.Title = "Change";
    Layout = "~/Views/Shared/FrontEndView.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Twoje dane</h4>
    <hr />

@model ProjektNutrition.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/FrontEndView.cshtml";
}

<h2>Szczegóły</h2>
<h4>Produkt</h4>
<hr />

<div>
    <div class="container">
        <div class="row">
            <div class="col">
                <dl>
                    <dt>
                        Nazwa produktu
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.name)
                    </dd>

                    <dt>
                        Kalorycznośc
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.caloric)
                    </dd>

                    <dt>
                        Białko
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.protein)
                    </dd>

                    <dt>
                        Węglowodane
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.carb)
                    </dd>

                    <dt>
                        Tłuszcz
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.fat)
                    </dd>

                    <dt>
                        Waga
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.weight)
                    </dd>




                    <dt>
                        Nazwa Kategorii
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Category.name)
                    </dd>

                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.Label("Waga", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.weight, new { htmlAttributes = new { @class = "form-control", @id = "weightID" } })
                                @Html.ValidationMessageFor(model => model.weight, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>

            
            <div class="col">
                <div id="chartContainer" style="height: 370px; width: 80%;">


                </div>
                <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
                <script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
            </div>
        </div>

        
    </div>
</div>


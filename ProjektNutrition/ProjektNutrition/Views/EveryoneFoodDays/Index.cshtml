@model IEnumerable<ProjektNutrition.Models.FoodDay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/FrontEndView.cshtml";
}

<h2>Wyświetlanie</h2>

<p>
    @Html.ActionLink("Dodaj", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Data
        </th>
        <th>
            Suma kalorii
        </th>
        <th>
            Suma białka
        </th>
        <th>
            Suma węglowodanów
        </th>
        <th>
            Suma tłuszczy
        </th>
        <th>
            Opis
        </th>
        <th>
            Użytkownik
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sumCaloric)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sumProtein)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sumCarb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sumFat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUsers.UserName)
            </td>
            <td>
                @Html.ActionLink("Szczegóły", "Details", new { id = item.id }) |
                @Html.ActionLink("Usuwanie", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>

